@inherits MuseumEventListComponentModel
@rendermode InteractiveServer

<section class="section-padding">
    <div class="gray-bg p_absolute l_0 b_0 r_0 h_340"></div>
    <div class="auto-container">
        <div class="section_heading text-center mb_60">
            <span class="section_heading_title_small">Все события</span>
            <h2 class="section_heading_title_big">Выставки и события</h2>
        </div>
        <div class="row">
            @if(MuseumEventList != null)
            {
                @foreach (var museumEvent in MuseumEventList.MuseumEvents)
                {
                    string detailsLink = $"/museum-details/{museumEvent.Id.ToString()}";
                    <MuseumEventCardComponent ImageUrl="@Path.Combine(BaseUrl, museumEvent.Photos.First().FilePath.Replace("\\", "/"))"
                                              Title="@museumEvent.Name"
                                              Text="@museumEvent.Annotation"
                                              CardDetailsLink="@detailsLink" />
                }
            }
        </div>
    </div>
</section>

